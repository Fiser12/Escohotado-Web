  "version": "0.2.0",
  "configurations": [
    {
      "command": "pnpm storybook",
      "name": "Run storybook",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "command": "pnpm --prefix apps/server run dev",
      "name": "Run development server",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "url": "http://localhost:3000",
      "name": "Debug client",
      "request": "launch",
      "type": "msedge",
      "userDataDir": false
    },
    {
      "name": "Debug",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm --prefix apps/server run dev",
      "serverReadyAction": {
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithEdge"
      }
    }
  ]
}
